<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="146dp">

    <com.bugermaker.tvapplication.widgets.ScaleConstraintLayout
        android:id="@+id/cl_back_to_top"
        android:layout_width="131dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_focus_bg_corner15_without_default_bg"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_look_around"
        app:layout_constraintTop_toTopOf="parent"
        app:tv_content="回到顶部" />

    <com.bugermaker.tvapplication.widgets.ScaleConstraintLayout
        android:id="@+id/tv_look_around"
        android:layout_width="131dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/selector_focus_bg_corner15_without_default_bg"
        app:layout_constraintLeft_toRightOf="@id/cl_back_to_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_back_to_top"
        app:tv_content="随心看" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:text="没有找到想看的？试试随心看吧"
        android:textColor="@color/colorWhite"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>